<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Choose a Professional Trainer</h1>
        <p class="lead text-muted">Find the right professional trainer that fits your schedule, fitness goals and types of workout.</p>
      </div>
    </div>
  </section>

 <div class="d-flex flex-wrap container">
     {{#each professionals}}
  <div class="col">
          <div class="card shadow-sm">
            <img src="/images/{{professional_services.[0].service.image}}" alt="{{professional_services.[0].service.name}}" width="100%">
            <div class="card-body">
              <p class="card-text">{{user.first_name}} {{user.last_name}}</p>
              <p class="card-text"><small class="text-muted">{{user.city}}, {{user.state}}</small></p>
              <p class="card-text"><small class="text-muted">{{professional_services.[0].service.name}}</small></p>
              <div class="d-flex justify-content-between align-items-center card-div">
                <div class="btn-group">
                  <button id="profileButton" type="button"  onclick="window.location.replace('professionals/{{id}}')" class="btn btn-sm btn-outline-secondary">View Profile</button>
                  <button id="calendlyButton" type="button" onclick="window.open('{{calendly}}', '_blank')" class="btn btn-sm btn-outline-secondary">Schedule Session</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
</div>
</main>

